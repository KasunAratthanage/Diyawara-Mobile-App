<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kasun.diyawaraapp.ManningCalculation">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="INSERT"
        android:id="@+id/btinsert"
        android:onClick="insertRealTimeData"
        android:background="#0490fb"
        android:maxLines="12"
        android:gravity="center"
        android:layout_below="@+id/textView8"
        android:layout_toEndOf="@+id/textView20"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MAIN DASHBOARD"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#f9f7f7"
        android:textSize="25dp"
        android:textColor="#070000" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GOOGLE MAP"
        android:id="@+id/btmap"
        android:onClick="googleMap"
        android:background="#03a6fe"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/btinsert"
        android:layout_alignStart="@+id/btinsert"
        android:layout_toStartOf="@+id/textView7"
        android:layout_alignRight="@+id/btretrive"
        android:layout_alignEnd="@+id/btretrive" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WEATHER DATA"
        android:id="@+id/button3"
        android:background="#04a2fd"
        android:layout_below="@+id/btmap"
        android:layout_marginTop="44dp"
        android:layout_alignLeft="@+id/btinsert"
        android:layout_alignStart="@+id/btinsert"
        android:layout_alignRight="@+id/btmap"
        android:layout_alignEnd="@+id/btmap" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RETRIVE "
        android:id="@+id/btretrive"
        android:onClick="getjsonData"
        android:background="#1194f9"
        android:layout_below="@+id/btinsert"
        android:layout_marginTop="42dp"
        android:gravity="center"
        android:layout_alignLeft="@+id/btinsert"
        android:layout_alignStart="@+id/btinsert"
        android:layout_toStartOf="@+id/textView7"
        android:layout_alignRight="@+id/btinsert"
        android:layout_alignEnd="@+id/btinsert" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Extra Sources"
        android:id="@+id/textView9"
        android:textColor="#080707"
        android:textSize="18dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Data Handling"
        android:id="@+id/textView8"
        android:textColor="#070707"
        android:textSize="18dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculations"
        android:id="@+id/button4"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3"
        android:layout_toEndOf="@+id/textView7"
        android:singleLine="true"
        android:background="#0b9bfb"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Calculations"
        android:id="@+id/textView20"
        android:layout_above="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#060606"
        android:textSize="18dp" />

</RelativeLayout>
